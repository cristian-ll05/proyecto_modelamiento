   <children>
      <!-- Nombre del producto -->
      <Text layoutX="50.0" layoutY="60.0" strokeType="OUTSIDE" strokeWidth="0.0" text="Nombre del producto:" />
      <TextField fx:id="productNameField" layoutX="50.0" layoutY="80.0" prefWidth="400.0" promptText="Nombre del producto" />

      <!-- Precio del producto -->
      <Text layoutX="50.0" layoutY="140.0" strokeType="OUTSIDE" strokeWidth="0.0" text="Precio del producto:" />
      <TextField fx:id="productPriceField" layoutX="50.0" layoutY="160.0" prefWidth="400.0" promptText="Precio del producto" />

      <!-- Stock del producto -->
      <Text layoutX="50.0" layoutY="220.0" strokeType="OUTSIDE" strokeWidth="0.0" text="Stock del producto:" />
      <TextField fx:id="productStockField" layoutX="50.0" layoutY="240.0" prefWidth="400.0" promptText="Stock del producto" />

      <!-- URL de la imagen del producto -->
      <Text layoutX="50.0" layoutY="300.0" strokeType="OUTSIDE" strokeWidth="0.0" text="URL de la imagen del producto:" />
