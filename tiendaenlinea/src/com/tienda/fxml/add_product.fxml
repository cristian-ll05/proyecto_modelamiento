      <Text layoutX="50.0" layoutY="380.0" strokeType="OUTSIDE" strokeWidth="0.0" text="Descripción del producto:" />
      <TextField fx:id="productDescripcion" layoutX="50.0" layoutY="400.0" prefWidth="400.0" promptText="Descripción del producto" />

      <!-- Botones -->
      <Button fx:id="registerButton" layoutX="67.0" layoutY="460.0" onAction="#handleAddProduct" prefWidth="150.0" text="Agregar producto" />
